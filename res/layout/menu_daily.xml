<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical">
	<TextView android:id="@+id/date"
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_marginRight="10.0sp" 
		android:layout_marginBottom="20.0sp"
		android:textSize="16.0sp"
		android:textStyle="bold" />

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:orientation="vertical" android:layout_weight="1">
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_width="wrap_content" android:layout_height="wrap_content">
			<TextView android:id="@+id/category_0"
				xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:layout_marginRight="10.0sp" />
			<TextView android:id="@+id/price_0"
				xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="wrap_content" android:layout_height="wrap_content" />
		</LinearLayout>
		<EditText android:id="@+id/body_0"
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:editable="false"
			android:cursorVisible="false"
			android:layout_width="wrap_content" android:layout_height="wrap_content" />
	</LinearLayout>

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:orientation="vertical" android:layout_weight="1">
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_width="wrap_content" android:layout_height="wrap_content">
			<TextView android:id="@+id/category_1"
				xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:layout_marginRight="10.0sp" />
			<TextView android:id="@+id/price_1"
				xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="wrap_content" android:layout_height="wrap_content" />
		</LinearLayout>
		<EditText android:id="@+id/body_1"
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:editable="false"
			android:cursorVisible="false"
			android:layout_width="wrap_content" android:layout_height="wrap_content" />
	</LinearLayout>

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:orientation="vertical" android:layout_weight="1">
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_width="wrap_content" android:layout_height="wrap_content">
			<TextView android:id="@+id/category_2"
				xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:layout_marginRight="10.0sp" />
			<TextView android:id="@+id/price_2"
				xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="wrap_content" android:layout_height="wrap_content" />
		</LinearLayout>
		<EditText android:id="@+id/body_2"
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:editable="false"
			android:cursorVisible="false"
			android:layout_width="wrap_content" android:layout_height="wrap_content" />
	</LinearLayout>

</LinearLayout>
    